{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username" required="required" />

    <input type="password" id="password" name="_password" placeholder="Password" required="required" />

    <input type="hidden" id="remember_me" name="_remember_me" value="on" />

    <div class="actions">
        <input type="submit" id="_submit" name="_submit" value="Login" />
        <a href="{{ path('fos_user_registration_register') }}">Register</a>
    </div>
</form>
{% endblock fos_user_content %}
